// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  instances Instance[]
  apiKeys   ApiKey[]
  buckets   Bucket[]
}

model Instance {
  id          Int      @id @default(autoincrement())
  containerId String   @unique
  name        String
  image       String
  status      String
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ApiKey {
  id         Int       @id @default(autoincrement())
  key        String    @unique
  name       String?
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?
}

model Bucket {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  objects   Object[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Object {
  id        Int      @id @default(autoincrement())
  key       String
  size      Int
  mimeType  String
  path      String
  bucketId  Int
  bucket    Bucket   @relation(fields: [bucketId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bucketId, key])
}
